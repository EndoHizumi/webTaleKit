{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist/src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/utils/logger.ts",
    "src/utils/store.ts",
    "src/utils/waitUtil.ts",
    "src/utils/fallbackTemplate.ts",
    "src/core/drawer.ts",
    "src/core/resourceManager.ts",
    "src/core/scenarioManager.ts",
    "src/core/resourceManager.ts",
    "src/resource/ImageObject.ts",
    "src/resource/soundObject.ts",
    "src/core/resourceManager.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
